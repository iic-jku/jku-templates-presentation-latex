%% 
%% Title frame color mode switching
%% 

\newcommand{\jkubeamer@framecolormode@default}{%
    \ifbool{jkubeamer@darkmode}{%
        \jkubeamer@framecolormode@dark%
    }{%
        \jkubeamer@framecolormode@light%
    }%
}
\newcommand{\jkubeamer@framecolormode@light}{%
    \setbeamercolor{background canvas}{use=palette secondary}%
    \setbeamercolor{palette primary}{fg=black}%
}
\newcommand{\jkubeamer@framecolormode@dark}{%
    \setbeamercolor{background canvas}{use=palette secondary, bg=palette secondary.fg, fg=palette secondary.bg}%
    \setbeamercolor{palette primary}{fg=white}%
}
\newcommand{\jkubeamer@framecolormode@dark@MED}{%
    \setbeamercolor{background canvas}{use=palette med, bg=palette med.fg, fg=palette med.bg}%
    \setbeamercolor{palette primary}{fg=white}%
}
\newcommand{\jkubeamer@framecolormode@dark@RE}{%
    \setbeamercolor{background canvas}{use=palette re, bg=palette re.fg, fg=palette re.bg}%
    \setbeamercolor{palette primary}{fg=white}%
}
\newcommand{\jkubeamer@framecolormode@dark@SOWI}{%
    \setbeamercolor{background canvas}{use=palette sowi, bg=palette sowi.fg, fg=palette sowi.bg}%
    \setbeamercolor{palette primary}{fg=white}%
}
\newcommand{\jkubeamer@framecolormode@dark@TNF}{%
    \setbeamercolor{background canvas}{use=palette tnf, bg=palette tnf.fg, fg=palette tnf.bg}%
    \setbeamercolor{palette primary}{fg=white}%
}
\newcommand{\jkubeamer@framecolormode@black}{%
    \setbeamercolor{background canvas}{bg=black, fg=white}%
    \setbeamercolor{palette primary}{fg=white}%
}
\newcommand{\jkubeamer@framecolormode@grey}{%
    \setbeamercolor{background canvas}{use=palette tertiary, bg=palette tertiary.fg, fg=palette tertiary.bg}%
    \setbeamercolor{palette primary}{use=palette tertiary, bg=palette tertiary.fg, fg=palette tertiary.bg}%
}
\newcommand{\jkubeamer@framecolormode@gray}{\jkubeamer@framecolormode@grey}

